<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"> <!-- Background color -->

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="50dp"> <!-- Card background color -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manga Now"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textColor="@color/text"
                android:layout_marginBottom="50dp"/>

            <Button
                android:id="@+id/MenuOnebutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:text="Check Latest Chapter"
                android:textColor="@color/background" /> <!-- Button background color -->

            <Button
                android:id="@+id/MenuTwoButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:text="Info Manga"
                android:textColor="@color/background" /> <!-- Button background color -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
