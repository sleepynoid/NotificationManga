<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"> <!-- Centers content within the parent -->

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="50dp"> <!-- Centers the CardView itself -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"> <!-- Centers content within the CardView -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="50dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/MenuOnebutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Check Latest Chapter" />

            <Button
                android:id="@+id/MenuTwoButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Info Manga" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
